# ============================================================================
# OMA Video Generator - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!
# ============================================================================

# ===================
# REQUIRED API KEYS
# ===================

# OpenRouter API Key (for LLM agents)
# Get yours at: https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Pexels API Key (for stock videos/images)
# Get yours at: https://www.pexels.com/api/
PEXELS_API_KEY=your-pexels-key-here

# ===================
# OPTIONAL API KEYS
# ===================

# Stability AI API Key (for AI image generation)
# Get yours at: https://platform.stability.ai/
STABILITY_API_KEY=

# ElevenLabs API Key (for TTS narration)
# Get yours at: https://elevenlabs.io/
ELEVENLABS_API_KEY=

# ===================
# APPLICATION CONFIG
# ===================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ===================
# SECURITY
# ===================

# Secret key for JWT signing (generate a strong random string for production)
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-in-production

# ===================
# SERVER CONFIG
# ===================

# Server host (0.0.0.0 for all interfaces)
API_HOST=0.0.0.0

# Server port (will be overridden by platform in production)
API_PORT=8000

# CORS origins (comma-separated list)
CORS_ORIGINS=http://localhost:7860,http://localhost:3000

# ===================
# VIDEO GENERATION
# ===================

# Maximum video duration in seconds
MAX_VIDEO_DURATION=180

# Default video duration in seconds
DEFAULT_VIDEO_DURATION=30

# Maximum concurrent video generations
MAX_CONCURRENT_GENERATIONS=3

# Task timeout in seconds (10 minutes default)
TASK_TIMEOUT_SECONDS=600
