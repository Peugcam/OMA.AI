[MASTER]
# Load custom checkers
load-plugins=pylint_custom_checkers

# Pickle collected data for later comparisons
persistent=yes

# Use multiple processes to speed up Pylint
jobs=4

# Blacklist files or directories
ignore=CVS,.git,__pycache__,outputs,venv,env,.venv,node_modules

# Pickle file for faster analysis
cache-size=500

[MESSAGES CONTROL]
# Enable specific warnings from our custom checkers
enable=duplicate-try-except,
       duplicate-api-call,
       hardcoded-string-constant,
       missing-async-error-handling,
       excessive-nesting,
       too-many-locals,
       agent-missing-method,
       agent-state-validation,
       agent-missing-logging

# Disable some default checks that might be too noisy
disable=C0111,  # missing-docstring
        C0103,  # invalid-name
        R0903,  # too-few-public-methods
        R0913,  # too-many-arguments
        W0212,  # protected-access
        C0301,  # line-too-long (use black/autopep8 instead)

[REPORTS]
# Output format
output-format=colorized

# Include message's id in output
include-ids=yes

# Reports style
reports=yes

# Activate score
score=yes

[BASIC]
# Good variable names
good-names=i,j,k,ex,Run,_,id,qa,ai,db,ui,df

# Regular expression for constant names
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

# Regular expression for class names
class-rgx=[A-Z_][a-zA-Z0-9]+$

# Regular expression for function names
function-rgx=[a-z_][a-z0-9_]{2,60}$

# Regular expression for method names
method-rgx=[a-z_][a-z0-9_]{2,60}$

# Regular expression for attribute names
attr-rgx=[a-z_][a-z0-9_]{2,30}$

# Regular expression for argument names
argument-rgx=[a-z_][a-z0-9_]{2,30}$

# Regular expression for variable names
variable-rgx=[a-z_][a-z0-9_]{2,30}$

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120

# Maximum number of lines in a module
max-module-lines=1000

# String used as indentation unit
indent-string='    '

# Number of spaces of indent required inside a hanging or continued line
indent-after-paren=4

[DESIGN]
# Maximum number of arguments for function / method
max-args=8

# Maximum number of locals for function / method body
max-locals=20

# Maximum number of return / yield for function / method body
max-returns=6

# Maximum number of branch for function / method body
max-branches=15

# Maximum number of statements in function / method body
max-statements=60

# Maximum number of parents for a class
max-parents=7

# Maximum number of attributes for a class
max-attributes=15

# Minimum number of public methods for a class
min-public-methods=1

# Maximum number of public methods for a class
max-public-methods=25

[SIMILARITIES]
# Minimum lines number of a similarity
min-similarity-lines=8

# Ignore comments when computing similarities
ignore-comments=yes

# Ignore docstrings when computing similarities
ignore-docstrings=yes

# Ignore imports when computing similarities
ignore-imports=yes

[TYPECHECK]
# List of members which are set dynamically
generated-members=numpy.*,torch.*

# Tells whether missing members accessed in mixin class should be ignored
ignore-mixin-members=yes

[VARIABLES]
# Tells whether we should check for unused import in __init__ files
init-import=no

# A regular expression matching the name of dummy variables
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

[IMPORTS]
# Deprecated modules which should not be used
deprecated-modules=optparse,tkinter.tix

# Create a graph of external dependencies
ext-import-graph=

# Create a graph of internal dependencies
int-import-graph=

[CLASSES]
# List of method names used to declare instance attributes
defining-attr-methods=__init__,__new__,setUp,__post_init__

# List of valid names for the first argument in a class method
valid-classmethod-first-arg=cls

# List of valid names for the first argument in a metaclass class method
valid-metaclass-classmethod-first-arg=mcs

[EXCEPTIONS]
# Exceptions that will emit a warning when caught
overgeneral-exceptions=builtins.Exception
